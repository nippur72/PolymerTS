{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "sourceMap": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "./Sample/bower_components/**/*.ts",
        "./Test/bower_components/**/*.ts",
        "./node_modules/**/*.ts",
        "./bower_components/**/*.ts",
        "./**/*.d.ts"
    ],
    "include": [
        "polymer-ts.ts"
    ]    
}
